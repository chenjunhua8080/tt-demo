<view class="container">

  <view class="body">
    <view class="page-section-title page-section-title-space">发送内容（以下字段可自由适配）</view>
    <view class="ttui-cells">
      <view class="ttui-cell">
        <view class="ttui-cell__hd">
          <view class="ttui-label">描述</view>
        </view>
        <view class="ttui-cell__bd">
          <input class="ttui-input" type="text" disabled="{{true}}" value="{{shareData.desc}}"></input>
        </view>
      </view>
      <view class="ttui-cell ttui-cell_input">
        <view class="ttui-cell__hd">
          <view class="ttui-label">分享开始路径</view>
        </view>
        <view class="ttui-cell__bd">
          <input class="ttui-input" type="text" disabled="{{true}}" value="{{from}}"></input>
        </view>
      </view>
    </view>
  </view>
  <view class="btn-area page-section-space">
      <button open-type="share">点击按钮分享</button>
      <button bindtap="backindex">回首页</button>
  </view>
</view>

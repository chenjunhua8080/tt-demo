
<view class="container">

  <view class="body">
    <view class="btn-area">
      <view class="body-view">
        <button type="default" bindtap="toast1Tap">点击弹出默认 Toast</button>
      </view>
      <view class="body-view">
        <button type="default" bindtap="toast2Tap">点击弹出带 duration Toast</button>
      </view>
      <view class="body-view">
        <button type="default" bindtap="toast3Tap">点击弹出带 icon Toast</button>
      </view>
      <view class="body-view">
        <button type="default" bindtap="hideToast">点击隐藏toast</button>
      </view>
    </view>
  </view>

	<view class="body">
    <view class="btn-area">
      <view class="body-view">
        <button type="default" bindtap="showLoadingTap">showLoading</button>
      </view>
      <view class="body-view">
        <button type="default" bindtap="hideLoadingTap">hideLoading</button>
      </view>
    </view>
  </view>

</view>
